{
  "name": "uoc-boilerplate",
  "version": "3.12.0",
  "private": true,
  "description": "Boilerplate for Advanced HTML/CSS Tools UOC students",
  "scripts": {
    "clean": "rimraf dist .cache .cache-loader .parcel-cache",
    "parcel:serve": "parcel src/index.html -p 8123 --target web",
    "parcel:build": "parcel build src/index.html --target web --no-source-maps --no-cache",
    "stylelint": "stylelint 'src/**/*.scss'",
    "dev": "npm-run-all --serial clean parcel:serve",
    "build": "npm-run-all --serial clean stylelint parcel:build"
  },
  "targets": {
    "web": {
      "context": "browser",
      "publicUrl": "./",
      "source": "src/index.html",
      "engines": {
        "browsers": "last 2 versions, > 0.5%, not dead"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/uoc-advanced-html-css/uoc-boilerplate.git"
  },
  "author": {
    "name": "Jordi Tarrida",
    "email": "jorditarrida@uoc.edu"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/uoc-advanced-html-css/uoc-boilerplate/issues"
  },
  "homepage": "https://github.com/uoc-advanced-html-css/uoc-boilerplate#readme",
  "devDependencies": {
    "@parcel/transformer-sass": "^2.15.3",
    "autoprefixer": "^10.4.20",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.15.3",
    "postcss-preset-env": "^10.1.3",
    "posthtml-include": "^2.0.1",
    "rimraf": "^6.0.1",
    "sharp": "^0.33.5",
    "stylelint": "^16.25.0",
    "stylelint-config-standard-scss": "^16.0.0"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^7.1.0"
  }
}
